<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:background="@drawable/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">




<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".PropertyActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView

            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="0dp"
            android:layout_weight="5"
            android:text="@string/Management"
            android:textAlignment="center"
            android:textColor="@android:color/primary_text_dark_nodisable"
            android:textSize="30sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical">




        <ImageView
            android:id="@+id/pic1"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_weight="10"
            android:layout_marginTop="10dp"
            android:src="@drawable/pic1"
            android:contentDescription="@string/pic1"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/txtName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/PACKAGE_NAME"
            android:layout_marginLeft="10dp"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/black"

            android:layout_marginStart="10dp" />
        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">


            <RadioButton
                android:id="@+id/btnPlat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/PLATINUM_PACKAGE"
                android:onClick="checkButton"/>
            <RadioButton
                android:id="@+id/btnGld"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/GOLD_PACKAGE"
                android:onClick="checkButton"/>
            <RadioButton
                android:id="@+id/btnSil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/SILVER_PACKAGE"
                android:onClick="checkButton"/>




        </RadioGroup>



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/txtGuest"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/NO_OF_GUESTS"
            android:layout_marginLeft="10dp"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/black"

            android:layout_marginStart="10dp" />

        <EditText
            android:id="@+id/editGuest"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="10dp"
            android:inputType="numberDecimal"
            android:hint="@string/NO_OF_GUESTS"
            android:autofillHints="@string/NO_OF_GUESTS"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/txtChild"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/NO_OF_Children"
            android:layout_marginLeft="10dp"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/black"

            android:layout_marginStart="10dp" />

        <EditText
            android:id="@+id/editChild"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="10dp"
            android:inputType="numberDecimal"
            android:hint="@string/NO_OF_Children"
            android:autofillHints="@string/NO_OF_Children"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/txtRoom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/NO_OF_ROOMS"
            android:layout_marginLeft="10dp"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/black"

            android:layout_marginStart="10dp" />
        <EditText
            android:id="@+id/editRoom"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:inputType="numberDecimal"
            android:hint="@string/NO_OF_ROOMS"
            android:autofillHints="@string/NO_OF_ROOMS"
            android:layout_marginEnd="10dp" />



    </LinearLayout>










    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center">

        <Button
            android:id="@+id/btnAdd"
            style="?android:attr/button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_weight="25"
            android:clickable="true"
            android:filterTouchesWhenObscured="true"
            android:focusable="true"
            android:inputType="none"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:text="@string/Addxxx"
            android:textColor="@android:color/black"
            android:textSize="20sp"

            />

        <Button
            style="?android:attr/button"
            android:id="@+id/btnView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:clickable="true"
            android:filterTouchesWhenObscured="true"
            android:focusable="true"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:text="@string/a2"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:inputType="none"
            android:layout_marginTop="20dp"

            />

        <Button
            style="?android:attr/button"
            android:id="@+id/btnUpdate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:clickable="true"
            android:filterTouchesWhenObscured="true"
            android:focusable="true"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:text="@string/a3"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:inputType="none"
            android:layout_marginTop="20dp"

            />

        <Button
            style="?android:attr/button"
            android:id="@+id/btnDelete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:clickable="true"
            android:filterTouchesWhenObscured="true"
            android:focusable="true"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:text="@string/a4"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:inputType="none"
            android:layout_marginTop="20dp"

            />





    </LinearLayout>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       >

        <Button
            android:id="@+id/btnAccount"
            style="?android:attr/button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:clickable="true"
            android:filterTouchesWhenObscured="true"
            android:focusable="true"
            android:inputType="none"
            android:text="@string/account"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:visibility="invisible" />


        <Button
            android:id="@+id/btnMeals"
            style="?android:attr/button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:clickable="true"
            android:filterTouchesWhenObscured="true"
            android:focusable="true"
            android:inputType="none"
            android:text="@string/meals"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:visibility="invisible" />





    </LinearLayout>









    </LinearLayout>

</ScrollView>







