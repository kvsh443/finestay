<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:background="@drawable/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".Gold_Package"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView

                android:id="@+id/PLATINUM"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="0dp"
                android:layout_weight="5"
                android:text="@string/GOLD_PACKAGE"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="30sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView

                android:id="@+id/G1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_weight="5"
                android:text="@string/PLATINUM_PACKAGE1"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="30sp" />


        </LinearLayout>






        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical">




            <ImageView
                android:id="@+id/pic1"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_weight="10"
                android:layout_marginTop="10dp"
                android:src="@drawable/pic1"
                android:contentDescription="@string/pic1"/>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/PValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:background="@color/colorPrimary"
                android:text="@string/EST_VALUE"
                android:textColor="@android:color/black"
                android:layout_marginStart="10dp" />


            <TextView
                android:id="@+id/no1_5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/No1"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="20sp" />







        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:paddingLeft="70dp"
            android:paddingRight="70dp">

            <Button
                android:id="@+id/b1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/r1"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:paddingLeft="100dp"
                android:paddingRight="100dp"
                style="?android:attr/button"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView

                android:id="@+id/G2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_weight="5"
                android:text="@string/PLATINUM_PACKAGE2"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="30sp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/pic2"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="10"
                android:src="@drawable/pic2"
                android:contentDescription="@string/pic2"/>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/GValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:background="@color/colorPrimary"
                android:text="@string/EST_VALUE"
                android:textColor="@android:color/black"

                android:layout_marginStart="10dp" />

            <TextView
                android:id="@+id/no2_5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/No2"
                android:textColor="@android:color/black"
                android:textAlignment="center"
                android:textSize="20sp"/>




        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:paddingLeft="70dp"
            android:paddingRight="70dp">

            <Button
                android:id="@+id/b2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/r2"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:paddingLeft="100dp"
                android:paddingRight="100dp"
                style="?android:attr/button"
                />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView

                android:id="@+id/G3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_weight="5"
                android:text="@string/PLATINUM_PACKAGE3"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="30sp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/pic3"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="10"
                android:src="@drawable/pic3"
                android:contentDescription="@string/pic3"/>
        </LinearLayout>






        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/SValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:background="@color/colorPrimary"
                android:text="@string/EST_VALUE"
                android:textColor="@android:color/black"

                android:layout_marginStart="10dp" />

            <TextView
                android:id="@+id/no3_5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/No3"
                android:textColor="@android:color/black"
                android:textAlignment="center"
                android:textSize="20sp"/>




        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:paddingLeft="70dp"
            android:paddingRight="70dp">

            <Button
                android:id="@+id/b3"
                style="?android:attr/button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:filterTouchesWhenObscured="true"
                android:focusable="true"
                android:inputType="none"
                android:paddingLeft="100dp"
                android:paddingRight="100dp"
                android:text="@string/r3"
                android:textColor="@android:color/black"
                android:textSize="14sp" />


        </LinearLayout>








    </LinearLayout>

</ScrollView>